<section class="steps pb-10">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<div class="d-flex justify-content-center">
					<img src="/src/assets/img/steps-bg.png" alt="" class="img-fluid">
				</div>
			</div>
			<div class="col-md-6">
				<h2 class="fs-24 fs-lg-48 mb-4 text-secondary">Что мы можем сделать:</h2>
				{% for step in site.steps %}
					<div class="steps__item py-4 mb-3">
						<div class="fs-16 fs-lg-20">{{ step }}</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
