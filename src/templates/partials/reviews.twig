<section class="reviews pb-lg-6">
	<div class="container">
		<div class="row mb-45">
			<div class="col-12">
				<h2 class="fs-24 fs-lg-48 text-center text-secondary wow fadeInUp">Отзывы на пробную консультацию</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="swiper reviews-slider py-6">
					<div class="swiper-wrapper">
						{% for slide in site.reviewsSlider %}
							<div class="swiper-slide">
								<div class="rounded-4 p-3 p-lg-45 shadow mx-3">
									<div class="reviews-slider__img">
										<img src="{{ slide.img }}" alt="">
									</div>
									<div class="d-flex justify-content-between align-items-center mb-4 mt-5 mt-md-0">
										<p class="fw-500 text-uppercase text-secondary mb-0">{{ slide.name }}</p>
										<div class="d-flex gap-2">
											{% for i in 1..5 %}
												<img src="/src/assets/img/ico-star.svg" width="20" alt="">
											{% endfor %}
										</div>
									</div>
									<p class="mb-0">{{ slide.text }}</p>
								</div>
							</div>
						{% endfor %}
					</div>

					<div class="swiper-button-prev"></div>
					<div class="swiper-button-next"></div>

				</div>
			</div>
		</div>
	</div>
</section>
